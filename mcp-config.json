{
  "tools": {
    "fullstack-starter-kit-generator": {
      "enabled": true,
      "config": {
        "templates": {
          "basePath": "templates",
          "defaultTemplate": "next-express"
        },
        "output": {
          "baseDir": "generated",
          "structure": {
            "apps": ["frontend", "backend"],
            "packages": ["shared", "config"]
          }
        },
        "validation": {
          "strict": true,
          "requiredFiles": [
            "package.json",
            "tsconfig.json",
            "pnpm-workspace.yaml"
          ]
        }
      }
    }
  },
  "workflows": {
    "create-fullstack-project": {
      "steps": [
        {
          "id": "generate",
          "tool": "fullstack-starter-kit-generator",
          "description": "Generate the initial project structure"
        },
        {
          "id": "setup-dependencies",
          "tool": "dependency-analyzer",
          "description": "Analyze and install dependencies"
        }
      ]
    }
  }
}
