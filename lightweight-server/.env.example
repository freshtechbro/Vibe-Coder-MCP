# Repotools Lightweight Server Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# CORS Configuration
CORS_ORIGIN=chrome-extension://*,http://localhost:*,https://localhost:*
CORS_CREDENTIALS=true

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-for-external-services

# File System Access
WORKSPACE_ROOT=/tmp/repotools-workspace
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.js,.ts,.tsx,.jsx,.py,.java,.cpp,.c,.h,.hpp,.cs,.php,.rb,.go,.rs,.swift,.kt,.scala,.clj,.hs,.ml,.fs,.elm,.dart,.lua,.r,.m,.pl,.sh,.sql,.html,.css,.scss,.sass,.less,.xml,.json,.yaml,.yml,.toml,.ini,.cfg,.conf,.md,.txt,.log

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GITHUB_TOKEN=your-github-personal-access-token

# Database (if needed for caching)
DATABASE_URL=sqlite:./data/repotools.db
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/repotools.log

# Task Management
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300000
CLEANUP_INTERVAL=3600000

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Development
DEBUG=repotools:*
ENABLE_SWAGGER=true
ENABLE_METRICS=true

