'use client' import { createClientComponentClient } from
'@supabase/auth-helpers-nextjs' import { useRouter } from 'next/navigation'
export default function AuthButton() { const supabase =
createClientComponentClient() const router = useRouter() const handleSignOut =
async () => { await supabase.auth.signOut() router.refresh() } return (
<button
  className='py-2 px-4 rounded-md no-underline bg-btn-background hover:bg-btn-background-hover'
  onClick='{handleSignOut}'
>
  Sign Out
</button>
) }