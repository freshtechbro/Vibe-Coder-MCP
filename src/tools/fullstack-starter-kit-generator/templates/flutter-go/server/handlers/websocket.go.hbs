package handlers import ( "log" "net/http" "github.com/gorilla/websocket" ) var
upgrader = websocket.Upgrader{ ReadBufferSize: 1024, WriteBufferSize: 1024,
CheckOrigin: func(r *http.Request) bool { return true // Allow all origins in
development }, } func HandleWebSocket(w http.ResponseWriter, r *http.Request) {
conn, err := upgrader.Upgrade(w, r, nil) if err != nil { log.Printf("Failed to
upgrade connection: %v", err) return } defer conn.Close() for { messageType,
message, err := conn.ReadMessage() if err != nil { log.Printf("Error reading
message: %v", err) break } // Echo the message back if err :=
conn.WriteMessage(messageType, message); err != nil { log.Printf("Error writing
message: %v", err) break } } }