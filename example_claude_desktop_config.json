{
  "mcpServers": {
    "vibe-coder-mcp": {
      "command": "npx",
      "args": ["vibe-coder-mcp"],
      "transport": "stdio",
      "env": {
        "OPENROUTER_API_KEY": "your_openrouter_api_key_here",
        "LOG_LEVEL": "info",
        "NODE_ENV": "production",
        "VIBE_CODER_OUTPUT_DIR": "/path/to/your/output/directory",
        "CODE_MAP_ALLOWED_DIR": "/path/to/your/codebase",
        "VIBE_TASK_MANAGER_READ_DIR": "/path/to/your/project"
      },
      "disabled": false,
      "autoApprove": [
        "research",
        "generate-rules",
        "generate-user-stories",
        "generate-task-list",
        "generate-prd",
        "generate-fullstack-starter-kit",
        "run-workflow",
        "get-job-result",
        "process-request",
        "map-codebase",
        "curate-context",
        "vibe-task-manager",
        "register-agent",
        "get-agent-tasks",
        "submit-task-response"
      ]
    }
  }
}