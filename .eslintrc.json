{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true, // Always attempt to resolve types under `<root>@types` directory even if it doesn't contain any source code, like `@types/unist`
        "project": "./tsconfig.json"
      }
    }
  },
  "rules": {
    "import/no-unresolved": "warn", // Re-enable to catch resolution issues
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "import/extensions": [
      // Re-enable but allow .js for now
      "warn",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/order": "warn", // Re-enable to enforce consistent import order
    "prettier/prettier": [
      // Add rule for line endings
      "warn",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "ignorePatterns": ["build/", "dist/", "node_modules/", "vitest.config.ts"],
  "overrides": [
    {
      "files": [
        "tools/user-stories-generator/**/*.js",
        "tools/workflow-runner/**/*.js",
        "tools/task-list-generator/**/*.js"
      ],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "plugins": ["import"],
      "extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings"],
      "rules": {}
    }
  ]
}
